<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome back SuperAdmin</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/output.css">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");

        @font-face {
            font-family: mono;
            src: url("/fonts/epilogue.ttf");
        }

        * {
            font-family: "Inter";
        }
    </style>
</head>

<body class="md:overflow-hidden bg-[#E9E9E9]">
    <main class="w-full h-screen md:p-2 flex items-center justify-end">
        <div class="image  h-full w-0 md:w-[60%]">
            <img id="look" class="h-full w-full object-cover scale-90" src="/images/ilus.png" alt="ilus">
        </div>
        <div class="md:w-[540px]  w-full bg-[#FFFFFF] flex flex-col items-center md:p-16 p-10  h-full md:rounded-3xl">
            <!-- <img class="h-12" src="logo" alt=""> -->
            <h1 class="capitalize font-[mono] text-4xl font-semibold mt-6 w-full text-center">Welcome Back!</h1>
            <h1 class="font-[mono]">Super Admin</h1>
            <p class="font-semibold mt-4 text-black/70 text-sm">Please Enter Your Details</p>
            <form action="/superadmin/login" class="flex gap-8  mt-14 flex-col w-full" method="post">
                <div class="flex flex-col justify-center relative">
                    <label id="username_label"
                        class="text-black/40 pointer-events-none font-medium absolute p-2 duration-200 top-[0%]"
                        for="username">Username</label>
                    <input class="border-b-[2px] text-xl focus:outline-none  border-black/40 p-2" type="text"
                        id="username" name="username">
                </div>
                <div class="flex flex-col justify-center relative">
                    <label id="email_label"
                        class="text-black/40 pointer-events-none font-medium absolute p-2 duration-200 top-[0%]"
                        for="email">Email</label>
                    <input class="border-b-[2px] text-xl focus:outline-none  border-black/40 p-2" type="email"
                        id="email" name="email">
                </div>
                <div class="flex flex-col  relative justify-center">
                    <label id="password_label"
                        class="text-black/40 pointer-events-none font-medium  p-2 absolute duration-200 top-[0%]"
                        for="password">Password</label>
                    <input class="border-b-[2px] focus:outline-none  border-black/40 p-2" type="password" id="password"
                        name="password">
                    <div class="icon absolute top-1/2 -translate-y-1/2 cursor-pointer px-1 right-0" id="show-pass"><i
                            class="ri-eye-line text-2xl"></i></div>
                </div>

                <input type="submit" value="Log in"
                    class="font-medium text-lg bg-[#1B1D21] text-white p-3 rounded-full mt-5 cursor-pointer">
            </form>
            <p class="text-xs mt-10 text-center">You are a only one superuser Who can enter through this portal!</p>
        </div>
    </main>


    <script>
        let usernameInput = document.getElementById("username")
        let emailInput = document.getElementById("email");
        let passwordInput = document.getElementById("password")
        let username_label = document.getElementById("username_label")
        let email_label = document.getElementById("email_label")
        let password_label = document.getElementById("password_label")
        let show_pass = document.getElementById("show-pass")
        let look = document.getElementById("look")




        // Username Input Field Animation

        usernameInput.addEventListener("focus", () => {
            username_label.style.top = `-50%`
            username_label.style.padding = `0`
            username_label.style.scale = `0.9`
        })
        usernameInput.addEventListener("blur", () => {
            if (!usernameInput.value) {
                username_label.style.top = `0%`
                username_label.style.padding = `8px`
                username_label.style.scale = `1`
            }
        })

        emailInput.addEventListener("focus", () => {
            email_label.style.top = `-50%`
            email_label.style.padding = `0`
            email_label.style.scale = `0.9`
        })
        emailInput.addEventListener("blur", () => {
            if (!emailInput.value) {
                email_label.style.top = `0%`
                email_label.style.padding = `8px`
                email_label.style.scale = `1`
            }
        })




        // Password Input field animation

        passwordInput.addEventListener("focus", () => {
            password_label.style.top = `-50%`
            password_label.style.padding = `0`
            password_label.style.scale = `0.9`
        })
        passwordInput.addEventListener("blur", () => {
            if (!passwordInput.value) {
                password_label.style.top = `0%`
                password_label.style.padding = `8px`
                password_label.style.scale = `1`
            }
        })




        //Show/Hide Password Features

        show_pass.addEventListener("click", () => {
            if (passwordInput.type == "password") {
                passwordInput.type = "text"
                show_pass.innerHTML = `<i class=" text-2xl ri-eye-off-line"></i>`
                look.style.transform = `rotateY(180deg)`
            }
            else {
                passwordInput.type = "password"
                show_pass.innerHTML = `<i class="text-2xl ri-eye-line"></i>`
                look.style.transform = `rotateY(0deg)`
            }
        })
    </script>
</body>

</html>